@model ActualFileStorage.PL.Models.RegistrationUserViewModel
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
@AjaxHelper.CreateScript("submitRegButton", "regForm", Url.Action("RegAjaxForm"), "POST", Url.Action("Unpack", controllerName: "Shortener"))

@using (Html.BeginForm("RegAjaxForm", "Register", FormMethod.Post, new { id = "regForm" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Регистрация пользователя</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
